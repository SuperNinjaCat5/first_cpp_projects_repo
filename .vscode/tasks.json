{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe${fileDirname}\\build\\${fileBasenameNoExtension}.exe",
                "/Fo${fileDirname}\\build\\",
                "/Fd${fileDirname}\\build\\",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build main with dependencies",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe${fileDirname}\\build\\main.exe",
                "/Fo${fileDirname}\\build\\",
                "/Fd${fileDirname}\\build\\",
                "main.cpp",
                "hypotenunse.cpp"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build",
            "detail": "Build main.cpp with all dependencies"
        }
    ],
    "version": "2.0.0"
}